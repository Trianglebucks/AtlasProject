<Page x:Class="Atlas.Pages.Inventory"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      xmlns:local="clr-namespace:Atlas.Pages" 
      xmlns:n="clr-namespace:Atlas" 
      mc:Ignorable="d" 
      d:DesignHeight="500" d:DesignWidth="854"
      Title="Inventory">

    <Grid Background="White">
        <Grid>
            <Label Content="Search" Margin="36,26,726,453"/>
            <Label Content="Category" Margin="278,20,484,454" VerticalContentAlignment="Top" HorizontalContentAlignment="Left"/>
            <StackPanel Margin="36,26,525,391" Orientation="Horizontal">
                <TextBox TextWrapping="Wrap" Width="183" Height="30" Margin="-1,0,0,0" CaretBrush="#FF1569B7" SelectionBrush="#FF5BAAF3" AcceptsReturn="True" AutomationProperties.Name="Search"/>
                <Button x:Name="search_btn" Width="49" Margin="0,0,3,0" BorderBrush="#FF414346" ToolTip="{DynamicResource PrimaryHueDarkForegroundBrush}" Foreground="#FF1569B7">
                    <Button.Background>
                        <ImageBrush Stretch="Uniform" ImageSource="/Pages/search.png"/>
                    </Button.Background>
                </Button>
            </StackPanel>

            <ComboBox x:Name="Category_Cmbox" Width="236" Height="29" Text="Category" Margin="278,53,340,418" AutomationProperties.Name="Category">
                <ComboBoxItem Content="Art Materials"/>
                <ComboBoxItem Content="Books"/>
                <ComboBoxItem Content="School Supplies"/>
                <ComboBoxItem Content="Stationary Items"/>
            </ComboBox>
            <Button x:Name="add_btn" Content="ADD" Margin="388,51,38,417" Background="#FF1569B7" BorderBrush="#FF1569B7" Width="134" Click="add_btn_Click"/>
            <Button x:Name="delete_btn" Content="DELETE" Margin="682,51,38,417" Background="#FF1569B7" BorderBrush="#FF1569B7" Click="delete_btn_Click"/>
            <ListView x:Name="inventory_list" Margin="0,109,0,10" SelectionChanged="inventory_list_SelectionChanged" ScrollViewer.CanContentScroll="False" SnapsToDevicePixels="True" HorizontalAlignment="Center" HorizontalContentAlignment="Left" ScrollViewer.HorizontalScrollBarVisibility="Disabled" Width="834">
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="Main Inventory" />
                    </GridView>
                </ListView.View>

                <ListViewItem BorderThickness="0,9,0,1" Height="113">
                    <StackPanel Width="794" Height="103">
                        <Label Content="Product ID" Width="124" Margin="16,0,119,0" HorizontalAlignment="Left"/>
                        <Image Height="62" Width="54" Source="/Pages/R (3).jpg" Margin="16,8,0,0" HorizontalAlignment="Left"/>
                        <Button x:Name="edit_btn1" Content="Edit" Width="50" Margin="733,-140,6,5" Background="{x:Null}" BorderBrush="{x:Null}" Foreground="#DD2D2DFF" ClipToBounds="True" SnapsToDevicePixels="False" HorizontalAlignment="Right" VerticalAlignment="Center" RenderTransformOrigin="0.55,0.475" FontSize="10" Click="edit_Click"/>
                        <Label Content="Measurement:" Width="94" Margin="-7,-60,0,0" Height="27"/>
                        <Label Content="Product Name" Width="124" Margin="-500,-25,0,0"/>
                        <Label Content="Category:" Width="68" Height="27" Margin="-288,-148,0,0"/>
                        <Label Content="Stocks:" Width="53" Height="27" Margin="-7,-148,0,0"/>
                        <Label Content="Defectives:" Width="74" Height="27" Margin="225,-148,0,0"/>
                        <Label Content="On Delivery:" Width="80" Height="27" Margin="494,-148,0,0"/>
                        <Label Content="Color:" Width="42" Height="27" Margin="225,-60,0,0"/>
                        <Label Content="Unit Cost:" Width="80" Height="27" Margin="494,-60,0,0"/>
                    </StackPanel>
                </ListViewItem>

                <ListViewItem BorderThickness="0,9,0,1" Height="113">
                    <StackPanel Width="794" Height="103">
                        <Label Content="Item 2" Width="118" HorizontalAlignment="Left" Margin="16,0,0,0"/>
                        <Image Height="62" Width="54" Source="/Pages/item 2.jpg" Margin="16,8,0,0" HorizontalAlignment="Left"/>
                        <Button x:Name="edit_btn2" Content="Edit" Width="50" Margin="733,-140,6,5" Background="{x:Null}" BorderBrush="{x:Null}" Foreground="#DD2D2DFF" ClipToBounds="True" SnapsToDevicePixels="False" HorizontalAlignment="Right" VerticalAlignment="Center" RenderTransformOrigin="0.55,0.475" FontSize="10" Click="edit_Click"/>
                    </StackPanel>
                </ListViewItem>

                <ListViewItem BorderThickness="0,9,0,1" Height="113">
                    <StackPanel Width="794" Height="103">
                        <Label Content="Item 3" Width="115" HorizontalAlignment="Left" Margin="16,0,0,0"/>
                        <Image Height="62" Width="54" Source="/Pages/item 3.jpg" Margin="16,8,0,0" HorizontalAlignment="Left"/>
                        <Button x:Name="edit_btn3" Content="Edit" Width="50" Margin="733,-140,6,5" Background="{x:Null}" BorderBrush="{x:Null}" Foreground="#DD2D2DFF" ClipToBounds="True" SnapsToDevicePixels="False" HorizontalAlignment="Right" VerticalAlignment="Center" RenderTransformOrigin="0.55,0.475" FontSize="10" Click="edit_Click"/>
                    </StackPanel>
                </ListViewItem>

                <ListViewItem BorderThickness="0,9,0,1" Height="113">
                    <StackPanel Width="794" Height="103">
                        <Label Content="Item 3" Width="129" Margin="16,0,0,0" HorizontalAlignment="Left"/>
                        <Image Height="62" Width="54" Source="/Pages/item4.jpg" Margin="16,8,0,0" HorizontalAlignment="Left"/>
                        <Button x:Name="edit_btn4" Content="Edit" Width="50" Margin="733,-140,6,5" Background="{x:Null}" BorderBrush="{x:Null}" Foreground="#DD2D2DFF" ClipToBounds="True" SnapsToDevicePixels="False" HorizontalAlignment="Right" VerticalAlignment="Center" RenderTransformOrigin="0.55,0.475" FontSize="10" Click="edit_Click"/>
                    </StackPanel>
                </ListViewItem>
            </ListView>
        </Grid>
    </Grid>
</Page>
