<Page x:Class="Atlas.Pages.Settings"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Atlas.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="500" d:DesignWidth="854"
      Title="Settings">

    <Grid Background="White">
        <Grid x:Name="homeBG">
            <Grid.Background>
                <ImageBrush ImageSource="/images/background.jpg"
                                x:Name="img_bg"
                                Stretch="Fill"/>
            </Grid.Background>

        </Grid>
        <Grid>
            <Image Source="/Pages/atlasims.png" Margin="120,70,120,70" Opacity="0.1"/>
            <Image Height="100" Width="100" Source="/Pages/profile.png" Margin="580,12,120,338"/>
            <Button x:Name="btnLogout" Content="Log out" Margin="571,430,147,38" BorderBrush="#FF1569B7" Click="btnLogout_click">
                <Button.Background>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                        <GradientStop Color="#FF5F8BA4"/>
                        <GradientStop Color="#FF1569B7" Offset="1"/>
                    </LinearGradientBrush>
                </Button.Background>
            </Button>
            <Button x:Name="btnSave" Content="Save Changes" Margin="148,430,570,38" BorderBrush="#FF1569B7" Click="btnSave_click">
                <Button.Background>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                        <GradientStop Color="#FF5F8BA4" Offset="0"/>
                        <GradientStop Color="#FF1569B7" Offset="1"/>
                    </LinearGradientBrush>
                </Button.Background>
            </Button>
            <Rectangle HorizontalAlignment="Center" Height="38" Margin="0,146,0,0" VerticalAlignment="Top" Width="558" Opacity="0.1" Stroke="#FF5F8BA4">
                <Rectangle.Effect>
                    <DropShadowEffect/>
                </Rectangle.Effect>
            </Rectangle>
            <Label Content="Edit Account" HorizontalAlignment="Left" Margin="154,155,0,0" VerticalAlignment="Top" FontSize="20" FontWeight="Bold"/>
            <Label Content="Username:" HorizontalAlignment="Left" Margin="158,301,0,0" VerticalAlignment="Top" FontSize="20" Width="108" Height="33"/>
            <TextBox x:Name="txtUserEdit" TextWrapping="Wrap" VerticalAlignment="Top" FontSize="20" Margin="271,298,407,164" BorderThickness="1,1,1,1" Background="White" CaretBrush="#FF1F6EB4" SelectionBrush="#FF87BBEA"/>
            <Label Content="Password:" HorizontalAlignment="Left" Margin="158,350,0,0" VerticalAlignment="Top" FontSize="20" Width="108" Height="33"/>
            <PasswordBox x:Name="txtPassEdit" Margin="271,350,407,112" BorderThickness="1,1,1,1" Background="White" CaretBrush="#FF1F6EB4" SelectionBrush="#FF87BBEA"/>


        </Grid>

    </Grid>
</Page>
