<Page x:Class="Atlas.Pages.Delivery"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Atlas.Pages" xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      mc:Ignorable="d" 
      d:DesignHeight="500" d:DesignWidth="854"
      Title="Delivery">

    <Grid Background="White">
        <Grid>
            <Label Content="Search" Margin="36,26,726,453"/>
            <Label Content="Area" Margin="278,20,484,454" VerticalContentAlignment="Top" HorizontalContentAlignment="Left"/>
            <StackPanel Margin="36,26,525,391" Orientation="Horizontal">
                <TextBox TextWrapping="Wrap" Width="183" Height="30" Margin="-1,0,0,0" CaretBrush="#FF1569B7" SelectionBrush="#FF5BAAF3" AcceptsReturn="True" AutomationProperties.Name="Search"/>
                <Button x:Name="search_btn" Width="49" Margin="0,0,3,0" BorderBrush="#FF414346" ToolTip="{DynamicResource PrimaryHueDarkForegroundBrush}" Foreground="#FF1569B7">
                    <Button.Background>
                        <ImageBrush Stretch="Uniform" ImageSource="/Pages/search.png"/>
                    </Button.Background>
                </Button>
            </StackPanel>

            <ComboBox x:Name="Area_Cmbox" Width="236" Height="29" Margin="278,53,340,418" AutomationProperties.Name="Category" SelectedIndex="-1">
                <ComboBoxItem Content="Caloocan"/>
                <ComboBoxItem Content="Las Pinas"/>
                <ComboBoxItem Content="Makati"/>
                <ComboBoxItem Content="Malabon"/>
                <ComboBoxItem Content="Mandaluyong"/>
                <ComboBoxItem Content="Manila"/>
                <ComboBoxItem Content="Marikina"/>
                <ComboBoxItem Content="Muntinlupa"/>
                <ComboBoxItem Content="Navotas"/>
                <ComboBoxItem Content="Paranaque"/>
                <ComboBoxItem Content="Pasay"/>
                <ComboBoxItem Content="Pasig"/>
                <ComboBoxItem Content="Pateros"/>
                <ComboBoxItem Content="Quezon City"/>
                <ComboBoxItem Content="San Juan City"/>
                <ComboBoxItem Content="Taguig City"/>
                <ComboBoxItem Content="Valenzuela City"/>
            </ComboBox>

            <Button x:Name="add_btn" Content="ADD" Margin="536,51,184,417" Background="#FF1569B7" BorderBrush="#FF1569B7" Click="add_btn_Click"/>
            <Button x:Name="delete_btn" Content="DELETE" Margin="682,51,38,417" Background="#FF1569B7" BorderBrush="#FF1569B7"/>

            <ListView x:Name="delivery_list" Margin="0,109,0,10" SelectionChanged="delivery_list_SelectionChanged" ScrollViewer.CanContentScroll="False" SnapsToDevicePixels="True" HorizontalAlignment="Center" HorizontalContentAlignment="Left" ScrollViewer.HorizontalScrollBarVisibility="Disabled" Width="834">
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="Deliveries"/>
                    </GridView>
                </ListView.View>

                <ListViewItem BorderThickness="0,9,0,1" Height="113">
                    <StackPanel Width="794" Height="103">
                        <Label Content="Tracking No." Width="124" Margin="16,0,119,0" HorizontalAlignment="Left"/>
                        <Label Content="Area:" Margin="-200,-19,0,0" Width="37" HorizontalContentAlignment="Left" VerticalContentAlignment="Stretch" Foreground="#DD000000" HorizontalAlignment="Center"/>
                        <Button x:Name="edit_btn1" Content="Edit" Width="50" Margin="704,-31,6,5" Background="{x:Null}" BorderBrush="{x:Null}" Foreground="#DD2D2DFF" ClipToBounds="True" SnapsToDevicePixels="False" HorizontalAlignment="Right" VerticalAlignment="Center" RenderTransformOrigin="0.55,0.475" FontSize="10" Click="edit_btn_click"/>
                        <Label Content="Recipient:" Width="75" Margin="-688,-7,0,0"/>
                        <Label Content="Address:" Width="75" Margin="-688,4,0,0"/>
                        <Label Content="Total Amount:" Width="86" HorizontalContentAlignment="Left" VerticalContentAlignment="Stretch" Foreground="#DD000000" Margin="-153,-38,0,0"/>
                        <Label Content="Total No. of Items" Width="112" HorizontalContentAlignment="Left" VerticalContentAlignment="Stretch" Foreground="#DD000000" Margin="200,-116,0,0" Height="39"/>
                    </StackPanel>
                </ListViewItem>

                <ListViewItem BorderThickness="0,9,0,1" Height="113">
                    <StackPanel Width="794" Height="103">
                        <Label Content="parcel 2" Width="119" Margin="12,0,119,0" HorizontalAlignment="Left"/>
                        <Button x:Name="edit_btn2" Content="Edit" Width="50" Margin="704,-25,6,5" Background="{x:Null}" BorderBrush="{x:Null}" Foreground="#DD2D2DFF" ClipToBounds="True" SnapsToDevicePixels="False" HorizontalAlignment="Right" VerticalAlignment="Center" RenderTransformOrigin="0.55,0.475" FontSize="10" Click="edit_btn_click"/>
                    </StackPanel>
                </ListViewItem>

                <ListViewItem BorderThickness="0,9,0,1" Height="113">
                    <StackPanel Width="794" Height="103">
                        <Label Content="Parcel 3" Width="114" HorizontalContentAlignment="Left" HorizontalAlignment="Left" Margin="16,0,0,0"/>
                        <Button x:Name="edit_btn3" Content="Edit" Width="50" Margin="704,-25,6,5" Background="{x:Null}" BorderBrush="{x:Null}" Foreground="#DD2D2DFF" ClipToBounds="True" SnapsToDevicePixels="False" HorizontalAlignment="Right" VerticalAlignment="Center" RenderTransformOrigin="0.55,0.475" FontSize="10" Click="edit_btn_click"/>
                    </StackPanel>
                </ListViewItem>

                <ListViewItem BorderThickness="0,9,0,1" Height="113">
                    <StackPanel Width="794" Height="103">
                        <Label Content="Parcel 4" Width="137" HorizontalAlignment="Left" Margin="18,0,0,0"/>
                        <Button x:Name="edit_btn4" Content="Edit" Width="50" Margin="704,-25,6,5" Background="{x:Null}" BorderBrush="{x:Null}" Foreground="#DD2D2DFF" ClipToBounds="True" SnapsToDevicePixels="False" HorizontalAlignment="Right" VerticalAlignment="Center" RenderTransformOrigin="0.55,0.475" FontSize="10" Click="edit_btn_click"/>
                    </StackPanel>
                </ListViewItem>
            </ListView>
        </Grid>
    </Grid>
</Page>
